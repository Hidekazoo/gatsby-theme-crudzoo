{
  "compilerOptions": {
    "allowJs": true,
    "target": "es6",
    "module": "es5",
    "lib": ["dom", "es6", "es2017"],
    "sourceMap": true,
    "jsx": "react",
    "outDir": "",
    "moduleResolution": "node",
    "removeComments": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "baseUrl": "."
  },
  "include": ["./src/**/*", "./jest-setup.ts"],
  "exclude": ["./dist"]
}
